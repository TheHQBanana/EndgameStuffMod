package com.hqbanana.endgamestuffmod.init;

import java.util.ArrayList;
import java.util.List;
import com.hqbanana.endgamestuffmod.items.ItemBase;

import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;

public class ModItems {
	public static final CreativeTabs TAB_ENDGAME_STUFF_MOD = (new CreativeTabs("tabEndgameStuffMod") { 
		@Override
		public ItemStack getTabIconItem() {
			return new ItemStack(ModItems.RUBY);
		}
	});
	
	public static final List<Item> ITEMS = new ArrayList<Item>();
	
	public static final Item RUBY = new ItemBase("ruby");
}
